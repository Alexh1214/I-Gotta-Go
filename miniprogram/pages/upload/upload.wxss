/* pages/upload/upload.wxss */

page {
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.button{
  font-size: 10pt;
  font-weight: bold;
  padding-top: 12px;
  
}
.submit-container {
  margin: 50rpx;
}

.btn-submit {
  background-color: #77BAF8;
  border-radius: 50rpx;
  align-items: center;
  color: white;
}

.image-container {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  background: white;
  width: 100%;
}

.image-container[plain]{
  padding: 0;
  border:none;
  width:100%;
  height: 100%
}

.button-container {
  background: white;
  margin-left: 30px;
  margin-right: 30px;
  margin-top: 10px;
}

.desc-container {
  margin-left: 50rpx;
  margin-right: 50rpx;
  font-size: 12pt;
  font-weight: bold;
}

.add-post {
  display: flex;
  justify-content: space-evenly;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  width:100%;
  background: white;
  color: black;
}

.address-container {
  margin-left:30px;
  margin-right:30px;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  font-size: 12pt;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  font-weight: bold;
}

.rating-subtitle {
  font-size: 11pt;
  display: flex;
  justify-content: space-between;
  margin-right: 20px;
  color: #879BAE;
}

.rating-category {
  font-size: 12pt;
  font-weight: bold;
  padding-bottom: 5px;
}
